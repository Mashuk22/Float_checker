{
    "manifest_version": 2,
    "name": "float_checker",
    "description": "float checking",
    "version": "1.0",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
         "matches": [
             "https://cs.money/",
             "*://*.steamcommunity.com/market/listings/730/*",
             "https://api.csgofloat.com/*"
         ],
         "js": ["jquery-3.5.1.min.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
      "tabs",
      "activeTab"
    ],
	"icons": { "16": "calc.png",
               "48": "calc.png",
               "128": "calc.png" }
}